<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Seeamo" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorPrimary">@color/primary_40</item>
        <item name="colorOnPrimary">@color/primary_100</item>
        <item name="colorPrimaryContainer">@color/primary_90</item>
        <item name="colorOnPrimaryContainer">@color/primary_10</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorSecondary">@color/secondary_40</item>
        <item name="colorOnSecondary">@color/secondary_100</item>
        <item name="colorSecondaryContainer">@color/secondary_90</item>
        <item name="colorOnSecondaryContainer">@color/secondary_10</item>
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/tertiary_40</item>
        <item name="colorOnTertiary">@color/tertiary_100</item>
        <item name="colorTertiaryContainer">@color/tertiary_90</item>
        <item name="colorOnTertiaryContainer">@color/tertiary_10</item>
        <!-- Error brand color. -->
        <item name="colorError">@color/error_40</item>
        <item name="colorOnError">@color/error_100</item>
        <item name="colorErrorContainer">@color/error_90</item>
        <item name="colorOnErrorContainer">@color/error_10</item>
        <!-- Neutral brand color. -->
        <item name="backgroundColor">@color/neutral_99</item>
        <item name="colorOnBackground">@color/neutral_10</item>
        <item name="colorSurface">@color/neutral_99</item>
        <item name="colorOnSurface">@color/neutral_10</item>
        <!-- Neutral variant color. -->
        <item name="colorSurfaceVariant">@color/neutral_variant_90</item>
        <item name="colorOnSurfaceVariant">@color/neutral_variant_30</item>
        <item name="colorOutline">@color/neutral_variant_50</item>

        <item name="black">@color/primary_0</item>
        <item name="white">@color/primary_100</item>
        <item name="blue">@color/primary_80</item>
        <item name="dark_blue">#3BA7E8</item>
        <item name="gray">@color/secondary_60</item>
        <item name="red">@color/error_60</item>

        <!-- Status/Navigation bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Theme style. -->
        <item name="searchViewStyle">@style/Base.Widget.SearchView</item>
    </style>
</resources>